{
  "name": "casadrives",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "cap:build": "npm run build && mkdir -p www && cp -r dist/* www/",
    "cap:sync": "npx cap sync",
    "cap:android": "npm run cap:build && npx cap add android && npx cap sync && npx cap open android",
    "cap:android:build": "cd android && ./gradlew assembleDebug",
    "cap:android:release": "cd android && ./gradlew assembleRelease"
  },
  "dependencies": {
    "@capacitor/android": "^5.7.0",
    "@capacitor/app": "^5.0.7",
    "@capacitor/core": "^5.7.0",
    "@capacitor/geolocation": "^5.0.7",
    "@capacitor/haptics": "^5.0.7",
    "@capacitor/ios": "^5.7.0",
    "@capacitor/keyboard": "^5.0.7",
    "@capacitor/local-notifications": "^5.0.7",
    "@capacitor/share": "^5.0.7",
    "@capacitor/splash-screen": "^5.0.7",
    "@capacitor/status-bar": "^5.0.7",
    "lucide-react": "^0.344.0",
    "mapbox-gl": "^2.15.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2",
    "node-schedule": "^2.1.1"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.7.0",
    "@types/mapbox-gl": "^2.7.21",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.6"
  }
}